{ 
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://demostore.amplience.com/site/pages/category",

	"title": "Category Page",
	"description": "",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
    ],
    
    "trait:hierarchy": {
		"childContentTypes": [
            "https://demostore.amplience.com/site/page-group",
            "https://demostore.amplience.com/site/pages/category"
        ]
    },

    "trait:sortable": {
        "sortBy": [
            { "key": "default", "paths": ["/menu/priority"] }
        ]
    },
	
	"type": "object",
	"properties": {
        "_meta": {
            "title": "CMS Category Slug",
            "properties": {
                "deliveryKey": {
                    "title": "Slug",
                    "type": "string",
                    "description": "Slug of the page URL in the app",
                    "pattern": "category\/.*"
                }
            },
            "required": [
                "deliveryKey"
            ]
        },
        "name": {
            "type": "string",
            "title": "Ecommerce Category",
            "description": "The eCommerce category that will be used on this page",
            "ui:extension": {
                "name": "ecomm-toolkit",
                "params": {
                    "label": "Linked Category",
                    "view": "single",
                    "data": "category",
                    "type": "string"
                }
            }
        },
        "hideProductList": {
            "title": "Hide Product List",
            "description": "Hide Product List for a Category Landing Page for instance.",
            "type": "boolean"
        },
        "menu": { "$ref": "https://demostore.amplience.com/lib/menu#/definitions/menuItemConfig" },
        "components": {
            "title": "Components",
            "type": "array",
            "items": {
                "title": "Component",
                "allOf": [
                    { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
                    {
                        "properties": {
                            "contentType": { "$ref": "https://demostore.amplience.com/lib/components#/definitions/anyComponent" }
                        }
                    }
                ]
            }
        },
        "slots": {
            "title": "Slots",
            "type": "array",
            "items": {
                "title": "Slots",
                "allOf": [
                    { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-reference" },
                    {
                        "properties": {
                            "contentType": { "$ref": "https://demostore.amplience.com/lib/components#/definitions/anySlot" }
                        }
                    }
                ]
            }
        }
    },

    "definitions": {
    }
}