{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://amprsa.net/email/template",
	"title": "Email Template",
	"description": "Email Template",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"content": {
			"title": "Content",
			"type": "array",
			"minItems": 0,
			"maxItems": 10,
			"items": {
				"allOf": [
					{
						"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
					},
					{
						"properties": {
							"contentType": {
								"enum": [
									"https://amprsa.net/email/header",
									"https://amprsa.net/email/banner",
									"https://amprsa.net/email/footer",
									"https://amprsa.net/content/simple-banner"
								]
							}
						}
					}
				]
			}
		}
	},
	"propertyOrder": []
}