{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://demostore.amplience.com/email/header",
  "title": "Email Header",
  "description": "Email Header",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "ui:component": {
    "name": "tabs",
    "params": {
      "tabs": {
        "defaultTab": "Top Link",
        "items": [
          {
            "label": "Top Link",
            "pointers": [
              "/topLinks"
            ]
          },
          {
            "label": "Logo",
            "pointers": [
              "/logoSettings"
            ]
          },
          {
            "label": "Navigation Bar",
            "pointers": [
              "/navSettings"
            ]
          }
        ]
      }
    }
  },
  "properties": {
    "topLinks": {
      "title": "Top Link Settings",
      "type": "object",
      "properties": {
        "leftLinkProperties": {
          "title": "Left Link Properties",
          "ui:component": {
            "name": "grid",
            "params": {
              "numColumns": 4,
              "columns": [
                {
                  "span": 1,
                  "pointers": [
                    "/leftLinkText"
                  ]
                },
                {
                  "span": 3,
                  "pointers": [
                    "/leftLinkUrl"
                  ]
                },
                {
                  "span": 4,
                  "pointers": [
                    "/leftLinkColor"
                  ]
                }
              ]
            }
          },
          "properties": {
            "leftLinkText": {
              "type": "string",
              "title": "Text"
            },
            "leftLinkUrl": {
              "type": "string",
              "title": "URL"
            },
            "leftLinkColor": {
              "title": "Left Link Color",
              "properties": {
                "colors": {
                  "type": "string",
                  "format": "color"
                }
              }
            }
          }
        },
        "rightLinkProperties": {
          "title": "Right Link Properties",
          "ui:component": {
            "name": "grid",
            "params": {
              "numColumns": 4,
              "columns": [
                {
                  "span": 1,
                  "pointers": [
                    "/rightLinkText"
                  ]
                },
                {
                  "span": 3,
                  "pointers": [
                    "/rightLinkUrl"
                  ]
                },
                {
                  "span": 4,
                  "pointers": [
                    "/rightLinkColor"
                  ]
                }
              ]
            }
          },
          "properties": {
            "rightLinkText": {
              "type": "string",
              "title": "Text"
            },
            "rightLinkUrl": {
              "type": "string",
              "title": "URL"
            },
            "rightLinkColor": {
              "title": "Right Link Color",
              "properties": {
                "colors": {
                  "type": "string",
                  "format": "color"
                }
              }
            }
          }
        }
      }
    },
    "logoSettings": {
      "title": "Logo Settings",
      "type": "object",
      "properties": {
        "imageSrc": {
          "title": "Logo image",
          "description": "",
          "type": "object",
          "anyOf": [
            {
              "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
            }
          ]
        },
        "imageProperties": {
          "title": "Logo Properties",
          "ui:component": {
            "name": "grid",
            "params": {
              "numColumns": 4,
              "columns": [
                {
                  "span": 1,
                  "pointers": [
                    "/imageWidth"
                  ]
                },
                {
                  "span": 3,
                  "pointers": [
                    "/imageAlt"
                  ]
                },
                {
                  "span": 1,
                  "pointers": [
                    "/linkAlias"
                  ]
                },
                {
                  "span": 3,
                  "pointers": [
                    "/linkUrl"
                  ]
                }
              ]
            }
          },
          "properties": {
            "imageAlt": {
              "title": "Logo alt text",
              "type": "string",
              "minLength": 0,
              "maxLength": 150,
              "ui:extension": {
                "name": "ai-image-caption",
                "params": {
                  "image": "2/imageSrc"
                }
              }
            },
            "imageWidth": {
              "title": "Logo width",
              "description": "This value will be set in pixels.",
              "type": "number",
              "minLength": 0,
              "maxLength": 3
            },
            "linkAlias": {
              "type": "string",
              "description": "Link Alias",
              "title": "Logo Link Alias"
            },
            "linkUrl": {
              "type": "string",
              "title": "Logo Link URL",
              "description": "All images and text in this content block will utilize this link."
            }
          }
        }
      }
    },
    "navSettings": {
      "title": "Navigation Bar Settings",
      "type": "object",
      "properties": {
        "toggle": {
          "title": "Navigation Toggle",
          "description": "Select to display the navigation bar",
          "type": "boolean"
        },
        "navigation": {
          "title": "Navigation",
          "type": "array",
          "minItems": 1,
          "maxItems": 6,
          "items": {
            "type": "object",
            "allOf": [
              {
                "type": "object",
                "ui:component": {
                  "name": "grid",
                  "params": {
                    "numColumns": 4,
                    "columns": [
                      {
                        "span": 1,
                        "pointers": [
                          "/text"
                        ]
                      },
                      {
                        "span": 3,
                        "pointers": [
                          "/url"
                        ]
                      },
                      {
                        "span": 4,
                        "pointers": [
                          "/color"
                        ]
                      }
                    ]
                  }
                },
                "properties": {
                  "text": {
                    "title": "Text",
                    "type": "string",
                    "minLength": 0,
                    "maxLength": 16
                  },
                  "url": {
                    "title": "URL",
                    "type": "string"
                  },
                  "color": {
                    "properties": {
                      "colors": {
                        "type": "string",
                        "format": "color"
                      }
                    }
                  }
                }
              }
            ]
          }
        }
      }
    }
  }
}