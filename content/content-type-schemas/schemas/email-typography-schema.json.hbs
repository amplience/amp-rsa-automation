{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://demostore.amplience.com/email/typography",
  "title": "Email Typography",
  "description": "",
  "definitions": {
    "headingSettings": {
      "title": "Heading Settings",
      "type": "object",
      "ui:component": {
        "name": "grid",
        "params": {
          "numColumns": 2,
          "columns": [
            {
              "span": 2,
              "pointers": [
                "/headingText"
              ]
            },
            {
              "span": 1,
              "pointers": [
                "/headingSize"
              ]
            },
            {
              "span": 1,
              "pointers": [
                "/headingColor"
              ]
            }
          ]
        }
      },
      "properties": {
        "headingText": {
          "title": "Heading Text",
          "type": "string",
          "minLength": 0,
          "maxLength": 50
        },
        "headingSize": {
          "title": "Heading Size",
          "description": "Sets the heading font size in pixels",
          "type": "number",
          "minimum": 8,
          "maximum": 45
        },
        "headingColor": {
          "title": "Heading color",
          "type": "string",
          "format": "color"
        }
      }
    },
    "paragraphSettings": {
      "title": "Paragraph Settings",
      "type": "object",
      "ui:component": {
        "name": "grid",
        "params": {
          "numColumns": 2,
          "columns": [
            {
              "span": 2,
              "pointers": [
                "/paragraphText"
              ]
            },
            {
              "span": 1,
              "pointers": [
                "/paragraphSize"
              ]
            },
            {
              "span": 1,
              "pointers": [
                "/paragraphColor"
              ]
            }
          ]
        }
      },
      "properties": {
        "paragraphText": {
          "title": "Paragraph Text",
          "type": "array",
          "minItems": 0,
          "maxItems": 255,
          "items": {
            "type": "string",
            "format": "markdown"
          }
        },
        "paragraphSize": {
          "title": "Paragraph Font Size",
          "description": "Sets the paragraph font size in pixels",
          "type": "number",
          "minimum": 8,
          "maximum": 24
        },
        "paragraphColor": {
          "title": "Paragraph Color",
          "description": "Choose the paragraph color",
          "type": "string",
          "format": "color"
        }
      }
    }
  }
}