{ 
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://amprsa.net/content/container",
  "title": "Container",
  "description": "A re-usable container for all content types",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "contentTypes": {
      "type": "array",
      "title": "Content",
      "description": "Select and order content to display in the container",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "",
                "enum": [
                  "https://amprsa.net/content/simple-banner",
                  "https://amprsa.net/content/simple-localized-banner",
                  "https://amprsa.net/content/card",
                  "https://amprsa.net/content/card-list",
                  "https://amprsa.net/content/curated-product-grid",
                  "https://amprsa.net/content/rich-text",
                  "https://amprsa.net/content/product-grid",
                  "https://amprsa.net/content/split-block",
                  "https://amprsa.net/content/text",
                  "https://amprsa.net/content/video",
                  "https://amprsa.net/content/container",
                  "https://amprsa.net/content/dynamic-blog-list"
                ]
              }
            }
          }
        ]
      }
    }
  }
}