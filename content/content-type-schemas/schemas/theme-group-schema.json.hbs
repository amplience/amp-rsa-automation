{ 
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://amprsa.net/site/theme-group",

	"title": "Theme Group",
	"description": "",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
    ],

    "trait:hierarchy": {
		"childContentTypes": [
            "https://amprsa.net/site/theme"
        ]
    },

    "trait:sortable": {
        "sortBy": [
            {
                "key": "default",
                "paths": [
                    "/type"
                ]
            }
        ]
    },
	
	"type": "object",
	"properties": {
        "type": {
            "type": "string",
            "const": "Themes"
        },
        "defaultTheme": {
            "title": "Default Theme",
					"type": "object",
					"properties": {
						"values": {
							"type": "array",
							"ui:extension": {
								"name": "hierarchy-picker",
								"params": {
									"nodeId": "{{contentMap.hierarchy-configuration}}",
									"type": "chip"
								}
							},
                            
							"items": {
								"allOf": [{
										"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-reference"
									},
									{
										"properties": {
											"contentType": {
												"enum": [
													"https://amprsa.net/site/theme"
												]
											}
										}
									}
								]
							}
						}
					}
        }
    },
    
    "definitions": {
        
    }
}